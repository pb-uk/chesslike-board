{
	"$schema": "https://json.schemastore.org/tsconfig",
	"include": ["src/chesslike-board.ts"],
	"compilerOptions": {
		"paths": {
			"@/*": ["./src/*"]
		},
		"target": "ES2020",

		"rootDir": "src",
		"declaration": true,
		"emitDeclarationOnly": true,
		"outFile": "./dist/chesslike-board.d.ts",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
