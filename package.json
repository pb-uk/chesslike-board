{
	"name": "chesslike-board",
	"description": "Presentation layer for chess-like games",
	"version": "0.9.0",
	"type": "module",
	"browser": "./dist/chesslike-board.min.js",
	"exports": {
		".": "./dist/chesslike-board.mjs"
	},
	"types": "./dist/chesslike-board.d.ts",
	"files": [
		"dist/**/*"
	],
	"keywords": [
		"chess",
		"chessboard",
		"puzzle"
	],
	"homepage": "https://github.com/pbuk-uk/chesslike-board#readme",
	"bugs": {
		"url": "https://github.com/pbuk-uk/chesslike-board/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pbuk-uk/chesslike-board.git"
	},
	"author": "pbuk (https://github.com/pbuk-uk)",
	"license": "MIT",
	"scripts": {
		"fix": "prettier . --write && eslint . --fix",
		"dev": "vite --config vite.config.dev.js",
		"build": "rimraf dist && tsc && vite build && npm run build:rename && npm run build:types",
		"build:rename": "npm run build:rename:iife && npm run build:rename:esm",
		"build:rename:iife": "shx mv dist/*.iife.js dist/chesslike-board.min.js && shx mv dist/*.iife.js.map dist/chesslike-board.min.js.map",
		"build:rename:esm": " shx mv dist/*board.js dist/chesslike-board.mjs && shx mv dist/*board.js.map dist/chesslike-board.mjs.map",
		"build:types": "tsc -p tsconfig.types.json && prettier ./dist/*.d.ts --write",
		"preview": "vite preview",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@eslint/js": "^9.37.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/eslint-plugin": "^1.3.16",
		"eslint": "^9.37.0",
		"globals": "^16.4.0",
		"prettier": "^3.6.2",
		"rimraf": "^6.1.0",
		"shx": "^0.4.0",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.46.0",
		"vite": "^7.1.7",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	}
}
